<Window
    x:Class="Wpf.OrdersDemoAfterEAWithMessenger.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.OrdersDemoAfterEAWithMessenger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="New" Width="40">New</Button>
                <Button x:Name="Save" Width="40">Save</Button>
            </StackPanel>
            <StackPanel Height="500" Orientation="Horizontal">
                <local:OrdersListView x:Name="OrderListView" />
                <sdk:TabControl x:Name="OrderViews" Width="500" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
